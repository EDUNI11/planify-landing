---
const href = Astro.props.href;
const width = Astro.props.width ? Astro.props.width : "px-4 py-2";
const textSize = Astro.props.textSize ? Astro.props.textSize : "";
const mobileButton = Astro.props.mobileButton ? "" : "hidden md:block"
const fullOpacity = Astro.props.fullOpacity ? "" : "bg-[transparent]";
const hoverScale = Astro.props.hoverScale ? "md:hover:scale-105" : "";
---

<a
        href={href}
        class=`text-black inline-flex gap-x-3 ${hoverScale} ${mobileButton} ${fullOpacity} dark:text-white bg-[--principal-color] border border-black/20 w-fit dark:border-white/20 ${width} ${textSize} rounded-md md:hover:bg-[--principal-color] md:hover:text-white transition-all duration-[.4s]`
>
    <slot/>
</a>